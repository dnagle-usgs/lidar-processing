      frame  $tw.f2$i
   }
   frame  $tw.f3
   frame  $tw.f4
   # -relief groove -borderwidth 3

   pack          \
      $tw        \
      -side top -fill x -padx 2

   for { set i 1 } { $i <= $cnt } { incr i 1 } {
      pack        \
         $tw.f2$i \
         -side top -fill x -padx 2
   }
   pack          \
      $tw.f4     \
      $tw.f3     \
      -side top -fill x -padx 2
}
create_transframes  $Xcnt



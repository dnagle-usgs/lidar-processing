global varlist;

# number of mtransect frames to generate
set Xcnt         3

proc create_vars { cnt } {
   global Xcnt
   for { set i 1 } { $i <= $Xcnt } { incr i 1 } {
      set var_no$i       1
      set trans_var_no$i 1
      set trans_xfma$i   1
   }
}
create_vars $Xcnt

